<h1>Admin</h1>

<section>
  <h2><a href="/markets">Markets</a></h2>
  <a class="action-button" href="/admin/markets/new">New Market</a>
  <a class="action-button" href="/admin/market_dates/new">New Market Date</a>

  <div class="tile-container">
    <% if !!@markets && @markets.length > 0 %>
      <% @markets.each do | market | %>
        <div class="tile">
          <%= market[:market_id] %> - <%= market[:market_name] %>
        </div>
      <% end %>
    <% else %>
      <div class="tile no-tiles">
        No markets found
      </div>
    <% end %>
  </div>
</section>

<section>
  <h2>Sellers</h2>

  <div class="tile-container">
  <% if !!@markets && @markets.length > 0 %>
    <%# DEBUGGING %>
    <% @sellers.each do | seller | %>
      <div class="tile">
        <a href="/sellers/<%= seller[:seller_id] %>">
         <%= seller[:seller_id] %> - <%= seller[:seller_name] %>
        </a>
      </div>
    <% end %>
  <% else %>
    <div class="tile no-tiles">
      No sellers found
    </div>
  <% end %>
  </div>
</section>

<section>
  <h2>Stalls</h2>

  <div class="tile-container">
  <% if !!@stalls && @stalls.length > 0 %>

    <%# DEBUG ONLY - REMOVE LATER %>
    <% @stalls.each do | stall | %>
      <div class="tile">
        <a href="/sellers/<%= stall[:seller_id] %>">
          <%= stall[:stall_name] %>
        </a>
      </div>
    <% end %>
  <% else %>
    <div class="tile no-tiles">
      No stalls found
    </div>
  <% end %>
</section>
